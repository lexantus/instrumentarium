<link rel="stylesheet" href="/css/login-form.css">
<form class="login-form" action="/api/login" method="post">
  <div class="caption-with-close">Log in</div>
  <a href="/auth/google" class="login-form__signin login-form__signin_social-google margin_bottom-size-10px">Log in
    with
    Google Account</a>
  <a href="/auth/fb" class="login-form__signin login-form__signin_social-fb margin_bottom-size-10px">Log in with
    Facebook Account</a>
  <a href="/auth/github" class="login-form__signin login-form__signin_social-github margin_bottom-size-10px">Log in
    with
    Github Account</a>
  <div class="login-form__separator">
    <span>or</span>
  </div>
  <input class="login-form__input login-form__input_icon-email margin_bottom-size-10px" type="text" name="login"
         id="login" placeholder="Email" required>
  <input class="login-form__input login-form__input_icon-password margin_bottom-size-10px" type="password"
         name="password" id="password" placeholder="Password" required>
  <button type="submit" href="#" class="login-form__signin margin_bottom-size-20px">Log in</button>
  <div class="margin_bottom-size-10px"><a href="#" class="login-form__a">Forgot your password?</a></div>
  <div class="margin_bottom-size-10px">Need additional help? <a class="login-form__a" href="#">Contact Support</a>
  </div>
  <div>Don't have an account? <a class="login-form__a" href="#">Sign up in seconds</a></div>
</form>